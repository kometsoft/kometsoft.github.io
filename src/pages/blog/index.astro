---
import { getCollection } from 'astro:content'
import Layout from '../../layouts/Layout.astro'

const posts = (await getCollection('blog')).sort((a, b) => a.data.publishDate.valueOf() - b.data.publishDate.valueOf())
---

<Layout title="Blog">
  <div class="bg-white py-6 sm:py-8 lg:py-12">
    <div class="max-w-screen-2xl px-4 md:px-8 mx-auto">
      <div class="mb-10 md:mb-16">
        <h2 class="text-gray-800 text-2xl lg:text-3xl font-bold text-center mb-4">Blog</h2>
        <p class="max-w-screen-md text-gray-500 text-xs md:text-sm text-center mx-auto">Stay updated with the latest info and tech updates.</p>
      </div>

      <div class="max-w-screen-md mx-auto">
        <div class="divide-y">
          {
            posts.map((post) => (
              <article class="grid grid-cols-3 gap-6 py-8">
                <div class="col-span-1">
                  <img src={post.data.image} alt={post.data.title} class="rounded-lg aspect-square object-cover shadow-lg" />
                </div>
                <div class="col-span-2 space-y-2">
                  <div class="flex items-center justify-between">
                    <span class="rounded-lg bg-primary-100 text-primary-600 px-2 py-px text-sm font-semibold">{post.data.category}</span>
                    <span class="text-sm text-gray-500">
                      <time datetime={post.data.publishDate.toISOString()}>
                        {post.data.publishDate.toLocaleDateString('en-us', {
                          year: 'numeric',
                          month: 'short',
                          day: 'numeric',
                        })}
                      </time>
                    </span>
                  </div>
                  <h2 class="font-bold text-2xl">
                    <a href={`/blog/${post.slug}/`} class="hover:underline">{post.data.title}</a>
                  </h2>
                  <p class="text-gray-500 text-sm">{post.data.description}</p>
                </div>
              </article>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</Layout>
