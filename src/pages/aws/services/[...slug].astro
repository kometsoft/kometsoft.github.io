---
import Layout from '../../../layouts/Layout.astro'
import { getCollection } from 'astro:content'

export async function getStaticPaths() {
  const awsServices = await getCollection('aws')
  return awsServices.map((service) => ({
    params: { slug: service.slug },
    props: { service },
  }))
}

const { service } = Astro.props
const { Content } = await service.render()

const allServices = await getCollection('aws')
const relatedServices = allServices
  .filter((s) => s.slug !== service.slug && s.data.category === service.data.category)
  .slice(0, 3)
---

<Layout title={`${service.data.title} - AWS Services - Kometsoft`}>
  <!-- Breadcrumb -->
  <div class="bg-gray-50 py-4">
    <div class="max-w-screen-xl px-4 md:px-8 mx-auto">
      <nav class="flex text-sm">
        <a href="/" class="text-gray-500 hover:text-primary-500">Home</a>
        <span class="mx-2 text-gray-400">/</span>
        <a href="/aws" class="text-gray-500 hover:text-primary-500">AWS</a>
        <span class="mx-2 text-gray-400">/</span>
        <a href="/aws/services" class="text-gray-500 hover:text-primary-500">Services</a>
        <span class="mx-2 text-gray-400">/</span>
        <span class="text-gray-900">{service.data.title}</span>
      </nav>
    </div>
  </div>

  <!-- Hero -->
  <div class="bg-gradient-to-br from-orange-500 to-orange-600 py-12 sm:py-16">
    <div class="max-w-screen-xl px-4 md:px-8 mx-auto">
      <div class="text-white">
        <div class="mb-4">
          <span class="inline-block px-3 py-1 bg-white/20 backdrop-blur text-white text-sm font-semibold rounded-full">
            {service.data.category}
          </span>
        </div>
        <h1 class="text-4xl lg:text-5xl font-bold mb-4">{service.data.title}</h1>
        <p class="text-lg lg:text-xl max-w-3xl">
          {service.data.description}
        </p>
      </div>
    </div>
  </div>

  <!-- Content -->
  <div class="bg-white py-12 sm:py-16 lg:py-20">
    <div class="max-w-screen-xl px-4 md:px-8 mx-auto">
      <div class="grid lg:grid-cols-3 gap-12">
        <!-- Main Content -->
        <div class="lg:col-span-2">
          <article class="prose prose-lg max-w-none
            prose-headings:font-bold prose-headings:text-gray-900
            prose-h2:text-3xl prose-h2:mt-12 prose-h2:mb-6 prose-h2:border-b-2 prose-h2:border-orange-500 prose-h2:pb-2
            prose-h3:text-2xl prose-h3:mt-8 prose-h3:mb-4
            prose-h4:text-xl prose-h4:mt-6 prose-h4:mb-3
            prose-p:text-gray-600 prose-p:leading-relaxed
            prose-a:text-orange-600 prose-a:no-underline hover:prose-a:underline
            prose-strong:text-gray-900 prose-strong:font-semibold
            prose-ul:list-none prose-ul:pl-0
            prose-li:pl-0 prose-li:mb-2
            prose-blockquote:border-l-4 prose-blockquote:border-orange-500 prose-blockquote:pl-4 prose-blockquote:italic
            prose-code:text-orange-600 prose-code:bg-orange-50 prose-code:px-1 prose-code:py-0.5 prose-code:rounded
            prose-table:border-collapse prose-table:w-full
            prose-th:bg-gray-50 prose-th:p-3 prose-th:text-left prose-th:font-semibold prose-th:border prose-th:border-gray-300
            prose-td:p-3 prose-td:border prose-td:border-gray-300
          ">
            <Content />
          </article>
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1">
          <!-- Quick Contact -->
          <div class="bg-orange-50 rounded-lg p-6 mb-8 sticky top-4">
            <h3 class="text-xl font-bold text-gray-900 mb-4">Interested in This Service?</h3>
            <p class="text-gray-600 mb-6">
              Get in touch with our AWS experts to discuss how this service can benefit your organization.
            </p>
            <div class="space-y-3">
              <a href="/#contact-us" class="block w-full bg-orange-600 hover:bg-orange-700 text-white text-center font-semibold rounded-lg px-6 py-3 transition">
                Contact Us
              </a>
              <a href="/aws/services" class="block w-full bg-white hover:bg-gray-50 text-orange-600 text-center font-semibold border-2 border-orange-600 rounded-lg px-6 py-3 transition">
                View All Services
              </a>
            </div>
          </div>

          <!-- Related Services -->
          {relatedServices.length > 0 && (
            <div class="bg-gray-50 rounded-lg p-6">
              <h3 class="text-xl font-bold text-gray-900 mb-4">Related Services</h3>
              <div class="space-y-4">
                {relatedServices.map((related) => (
                  <a href={`/aws/services/${related.slug}`} class="block group">
                    <div class="bg-white rounded-lg p-4 hover:shadow-md transition-all border border-gray-200 hover:border-orange-500">
                      <h4 class="font-semibold text-gray-900 mb-2 group-hover:text-orange-600 transition-colors">
                        {related.data.title}
                      </h4>
                      <p class="text-sm text-gray-600 line-clamp-2">
                        {related.data.description}
                      </p>
                    </div>
                  </a>
                ))}
              </div>
            </div>
          )}
        </div>
      </div>
    </div>
  </div>

  <!-- CTA -->
  <div class="bg-gray-50 py-12 sm:py-16">
    <div class="max-w-screen-xl px-4 md:px-8 mx-auto text-center">
      <h2 class="text-gray-900 text-3xl lg:text-4xl font-bold mb-4">Ready to Transform Your Business?</h2>
      <p class="text-gray-600 text-lg mb-8 max-w-2xl mx-auto">
        Let's discuss how {service.data.title.toLowerCase()} can help you achieve your business objectives.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/#contact-us" class="inline-block bg-orange-600 hover:bg-orange-700 text-white font-semibold text-center rounded-lg px-8 py-3 transition duration-100">
          Get Started
        </a>
        <a href="/aws" class="inline-block bg-white hover:bg-gray-50 text-orange-600 font-semibold text-center border-2 border-orange-600 rounded-lg px-8 py-3 transition duration-100">
          Back to AWS Overview
        </a>
      </div>
    </div>
  </div>
</Layout>

